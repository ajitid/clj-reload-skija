{:paths ["src" "resources"]

 :deps
 {;; Types - core classes shared by JWM and Skija
  io.github.humbleui/types {:mvn/version "0.2.0"}

  ;; JWM for windowing
  io.github.humbleui/jwm {:mvn/version "0.4.18" :exclusions [io.github.humbleui/types]}}

 :aliases
 {;; Platform-specific Skija dependencies
  :macos-arm64
  {:extra-deps {io.github.humbleui/skija-macos-arm64 {:mvn/version "0.116.2" :exclusions [io.github.humbleui/types]}}}

  :macos-x64
  {:extra-deps {io.github.humbleui/skija-macos-x64 {:mvn/version "0.116.2" :exclusions [io.github.humbleui/types]}}}

  :windows
  {:extra-deps {io.github.humbleui/skija-windows-x64 {:mvn/version "0.116.2" :exclusions [io.github.humbleui/types]}}}

  :linux
  {:extra-deps {io.github.humbleui/skija-linux-x64 {:mvn/version "0.116.2" :exclusions [io.github.humbleui/types]}}}

  :dev
  {:extra-paths ["dev"]
   :extra-deps
   {io.github.tonsky/clj-reload {:mvn/version "0.7.1"}
    nrepl/nrepl {:mvn/version "1.1.1"}
    cider/cider-nrepl {:mvn/version "0.50.2"}}}

  ;; Connect to running nREPL (doesn't load dev/ to avoid port conflict)
  :connect
  {:extra-deps {nrepl/nrepl {:mvn/version "1.1.1"}}
   :main-opts ["-m" "nrepl.cmdline" "--connect" "--port" "7888"]}

  :run
  {:main-opts ["-m" "app.core"]}

  :repl
  {:extra-deps {cider/cider-nrepl {:mvn/version "0.50.2"}}
   :main-opts ["-m" "nrepl.cmdline"
               "--middleware" "[cider.nrepl/cider-middleware]"]}}}
